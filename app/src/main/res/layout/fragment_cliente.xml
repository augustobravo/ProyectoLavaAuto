<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.ClienteFragmento">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/txtnombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#2196F3"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar servicio "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="40dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="18dp"
                android:src="@mipmap/cliente"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="272dp"
                android:layout_marginBottom="30dp"
                android:text="Perfil"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:onClick="regresar"
                android:text="Regresar"
                android:textColor="#DC0F0F"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="615dp" />

            <CheckBox
                android:id="@+id/checkBox"
                style="@android:style/Widget.Holo.Light.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#AE1717"
                android:checked="false"
                android:clickable="true"
                android:text="OS - 13 Feb 2020"
                android:textColorLink="#AE1717"
                android:textCursorDrawable="@android:color/holo_red_light"
                tools:layout_editor_absoluteX="257dp"
                tools:layout_editor_absoluteY="88dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="180dp"
                android:layout_height="24dp"
                android:text="Informacion Basica"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="81dp" />

            <ListView
                android:id="@+id/idlistordenusuario"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="299dp" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Ordenes"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="270dp" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:text="fecha"
                app:layout_constraintStart_toEndOf="@+id/textView61"
                tools:layout_editor_absoluteY="270dp" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginTop="268dp"
                android:layout_marginEnd="173dp"
                android:text="Estado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView62"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="128dp"
                android:layout_height="15dp"
                android:hint="name"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="120dp" />

            <TextView
                android:id="@+id/txtdni"
                android:layout_width="125dp"
                android:layout_height="18dp"
                android:hint="dni"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="151dp" />

            <TextView
                android:id="@+id/txtfechanac"
                android:layout_width="122dp"
                android:layout_height="22dp"
                android:hint="fecha"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:id="@+id/txtregistro"
                android:layout_width="121dp"
                android:layout_height="22dp"
                android:hint="registro"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="222dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="615dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grabar"
                tools:layout_editor_absoluteX="258dp"
                tools:layout_editor_absoluteY="614dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>