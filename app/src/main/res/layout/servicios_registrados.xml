<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idTxtReservaID"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/idTxtClienteServicio"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/idTxtOrdenServicio"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/idTxtFechaReservaServicio"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/idTxtHoraReservaServicio"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/idBtnVerDetalleReserva"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_search" />
</LinearLayout>
